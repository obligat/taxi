.btn-group {
  display: flex;
  margin-bottom: 60rpx;
}

.btn-group button {
  line-height: 60rpx;
  width: 180rpx;
  color: white;
  margin: 20rpx;
}

.wrapper {
  display: flex;
  line-height: 100rpx;
  width: 90%;
  position: relative;
}

.flex-start {
  align-items: flex-start;
}

.wrapper button {
  line-height: 60rpx;
  min-width: 100rpx;
  color: white;
  background-color: rgba(9, 187, 7, 0.8);
  top: 26rpx;
  right: 0rpx;
  position: absolute;
}

.hidden {
  display: none;
}

picker-view {
  line-height: 120rpx;
  width: 180rpx;
  margin-left: 6rpx;
}

picker-view-column {
  line-height: 60rpx;
}

.position {
  width: 390rpx;
  line-height: normal;
  margin-top: 30rpx;
}

.btn-next {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  top: 400rpx;
}
