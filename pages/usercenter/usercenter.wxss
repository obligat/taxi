/* pages/usercenter/usercenter.wxss */
.container {
  align-items: center;
  justify-content: flex-start;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 32rpx;
  width: 92%;
  height: 300rpx;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 32rpx;
  border-radius: 50%;
  border:2rpx solid #f5f5f5;
}

.userinfo-nickname {
  color: #353535;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.list{
  background: #f5f5f5;
  margin: 10rpx;
  width: 90%;
  padding: 10rpx;
  text-align: center;
}